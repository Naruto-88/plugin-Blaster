{
  "name": "wp-update-monitor",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "start": "pnpm -r start",
    "start:server": "node server.js",
    "build:standalone": "pnpm --filter @nsm/web build",
    "zip:standalone": "bestzip web_build.zip apps/web/.next/standalone/**/* apps/web/.next/static/**/* apps/web/public/**/*",
    "bundle:standalone": "pnpm build:standalone && pnpm zip:standalone",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "db:migrate": "pnpm --filter @nsm/db prisma migrate deploy",
    "db:seed": "pnpm --filter @nsm/db exec tsx src/seed.ts",
    "db:admin-reset": "pnpm --filter @nsm/db run admin-reset",
    "db:create-admin": "pnpm --filter @nsm/db run create-admin",
    "db:migrate:dev": "pnpm --filter @nsm/db prisma migrate dev",
    "db:backfill-accountId": "pnpm --filter @nsm/db exec tsx src/backfill-accountId.ts"
  }
}
